<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textSize="13sp"
            android:id="@+id/edtTieuDe"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/colorTextItem" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/micro" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:textSize="13sp"
            android:id="@+id/edtNoiDung"
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/micro" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Tùy chỉnh thời gian-------------------------------"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="BẮT ĐẦU"
        android:textSize="13sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colornew"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnBauDau"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_button"
            android:text="SET"
            android:textColor="@color/bgTieuDe"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:textColor="@color/gray"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEADLINE"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colornew"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnDeadline"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_button"
            android:text="SET"
            android:textColor="@color/gray"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>


    <TextView
        android:textColor="@color/gray"
            android:id="@+id/txtTuyChinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lặp lại"
        android:textSize="13sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textSize="13sp"
            android:id="@+id/radLapTheoPhut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theo phút" />

        <RadioButton
            android:textSize="13sp"
            android:id="@+id/radLapTheoNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theo ngày" />

        <RadioButton
            android:textSize="13sp"
            android:id="@+id/radtheoTuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Theo tuần" />

        <RadioButton
            android:textSize="13sp"
            android:id="@+id/radKhongCanNhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không cần lặp" />
    </RadioGroup>

    <TextView
        android:textSize="13sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="--------------------------------------------------------"></TextView>

    <Button
        android:textSize="13sp"
        android:textColor="@color/gray"
        android:id="@+id/btnLuuCV"

        android:background="@drawable/duongvien_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu công việc" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <ListView
        android:textSize="13sp"
        android:focusable="true"
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>