<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"

    app:layout_insetEdge="top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/duongvien_goctron"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="52dp"
            android:layout_height="43dp"
            app:srcCompat="@drawable/mark" />

        <LinearLayout
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTieuDe_item"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Title"
                android:textColor="@color/colorTextItem"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtNoiDung_item"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:text="Content"
                android:textColor="@color/colorTextContent"
                android:textSize="13sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgXoa"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_weight="1"

            android:shadowColor="#03451D1D"
            android:shadowDx="1.8"
            android:shadowDy="1.2"
            android:shadowRadius="1.5"

            app:srcCompat="@drawable/iconfinder_basket_1814090" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />


</LinearLayout>